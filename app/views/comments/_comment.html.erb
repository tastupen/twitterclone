<div style="border-bottom: solid 1px rgba(0, 0, 0, 0.3);">
    <div class="form-profile" style="padding: 10px 0;">
        <div class="form-image">
            <% if comment.user.avatar.attached? %>
                <%= image_tag comment.user.avatar %>
            <% end %>
       </div>
        <div class="form-user">
            <%= comment.user.name %>
        </div>
    </div>
    <div class="comment-main">
        <%= comment.content %>
    </div>  
</div>