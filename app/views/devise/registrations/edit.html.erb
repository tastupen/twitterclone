<div class="background">
  <div class="card-body">
    <h2 class="edit">Edit <%= resource_name.to_s.humanize %></h2>
    <div class="card-field">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
    
        <div>
          <%= f.label :image_file, "画像をアップロード", class: "image_input_btn" %><br />
          <%= f.file_field :avatar, class: "image_form" %>
        </div>
  
        <div class="field">
          <%= f.label :name %><br />
          <%= f.text_field :name, autofocus: true, class: "text_field" %>
        </div>

        <div class="field">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "text_field" %>
        </div>

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
        <% end %>

        <div class="field">
          <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
          <%= f.password_field :password, autocomplete: "new-password", class: "text_field" %>
          <% if @minimum_password_length %>
            <br />
            <em><%= @minimum_password_length %> characters minimum</em>
          <% end %>
        </div>

        <div class="field">
          <%= f.label :password_confirmation %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "text_field" %>
        </div>

        <div class="field">
          <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
          <%= f.password_field :current_password, autocomplete: "current-password", class: "text_field" %>
        </div>
  
        <div class="field">
          <%= f.label :profile %><br />
          <%= f.text_area :profile, autofocus: true, rows: "7", class: "text_field" %>
        </div>

        <div class="actions">
          <%= f.submit "Update", class: "btn" %>
        </div>
      <% end %>
    </div>
  
    <div class="card-field">
      <h3>Cancel my account</h3>

      <p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "btn" %></p>

      <%= link_to "Back", :back, class: "back" %>
    </div>
  </div>
</div>


