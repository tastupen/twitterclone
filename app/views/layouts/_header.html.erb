<header class="page-header">
    <%= link_to 'Twitter', root_path, class: "logo" %>
    <div>
        <nav>
            <ul class="main-nav">
                <%  if user_signed_in?  %>
                <li class="nav-item">
                    <%= link_to 'プロフィール編集', user_path(current_user), class: 'nav-link' %>
                </li>
                <li class="nav-item">
                    <%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: "nav-link" %>
                </li>
                <% else %>
                <li class="nav-item">
                    <%= link_to "サインアップ", new_user_registration_path, class: "nav-link" %>
                </li>
                <li class="nav-item">
                    <%= link_to "ログイン", new_user_session_path, class: "nav-link" %>
                </li>
                <% end %>
            </ul>
        </nav>
    </div>
</header>